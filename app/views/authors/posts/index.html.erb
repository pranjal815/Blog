<% provide(:page_title, 'All Post') %>
<%= provide(:authors, 'active') %>
<% content_for(:sidebar) do %>
    <%= render :partial => 'shared/sidebar' %>
<% end %>

<div class="row">
  <div>
    <%= link_to 'New Post', new_authors_post_path, class: 'btn btn-primary btn-lg' %>
  </div>
  <br>
  <table class="table table-striped">
    <tr>
      <th colspan="5">Title</th>
    </tr>
    <%= render @posts %>
  </table>

</div>